{
    "moduleResolution": "node",
    "compilerOptions": {
        "module": "es2020",
        "target": "esnext",
        // "checkJs": true,
        "allowJs": true,
        // "isolatedModules": false,
        "baseUrl": "src",
        "paths": {
            "$apis/*": [
                "src/apis/*"
            ],
            "$components/*": [
                "src/components/*"
            ],
            "$layouts/*": [
                "src/layouts/*"
            ],
            "$stores/*": [
                "src/stores/*"
            ],
            "$styles/*": [
                "src/styles/*"
            ],
            "$utils/*": [
                "src/utils/*"
            ],
        },
        "outDir": "dist",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}