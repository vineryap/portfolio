---
import { SOCIAL_MEDIA_LINKS, EMAIL } from '../config';
import Icon from './Icon.astro';

const { lang = "en" } = Astro.props;
const year = new Date().getFullYear();

const i18n = {
  en: {
    contact: 'Contact',
    sitemap: "Sitemap"
  },
  ja: {
    contact: '連絡',
    sitemap: "サイトマップ"
  }
}
---

<footer class="absolute bottom-0 p-10 footer bg-base-100 text-base-content footer-center lg:px-20">
  <div class="grid grid-flow-col gap-4">
    <a href="/sitemap.xml" title="sitemap" class="link link-hover">{i18n[lang].sitemap}</a>
    <address>
      <a href={`mailto:${EMAIL}?subject=Hi, Vin!`} class="link link-hover inline-flex items-center">{i18n[lang].contact} <Icon uri="ion:mail-outline" className="w-4 h-4 ml-1" /></a>
    </address>
  </div> 
  <div class="grid grid-flow-col gap-4">
    <a href={SOCIAL_MEDIA_LINKS.freeCodeCamp} rel="external" target="_blank" class="text-gray-500">
      <Icon uri="simple-icons:freecodecamp" className="w-6 h-6 fill-current"/>
    </a>
    <a href={SOCIAL_MEDIA_LINKS.github} rel="external" target="_blank" class="ml-3 text-gray-500">
      <Icon uri="simple-icons:github" className="w-6 h-6 fill-current"/>
    </a>
  </div> 
  <div>
    <p>Copyright © {year} - All right reserved by Vin E. R. Yap</p>
  </div>
</footer>

