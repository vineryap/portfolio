---
import { asDate } from "@prismicio/helpers";

const {
    date,
    locales = "en-US",
    options = {
        year: "numeric",
        month: "short",
        day: "2-digit"
    }
} = Astro.props;

const formattedDate = new Intl.DateTimeFormat(locales, options).format(asDate(date));
---

{formattedDate}