---
const { skillsContent } = Astro.props;
const { section, heading, list } = skillsContent;
---

<section id={section} class="max-w-4xl mx-auto py-20 md:pb-40">
    <div class="container flex flex-col items-center px-5 py-8 mx-auto">
        <div class="flex flex-col w-full mb-12 text-left ">
        <div class="w-full">
            <h2 class="mx-auto mb-4 text-2xl font-semibold leading-none text-black title-font">{heading}</h2>
            <div class="h-1 w-20 mb-10 bg-secondary"></div>
            <div id="md-wrapper" class="flex flex-wrap justify-start flex-grow space-y-4 space-y-reverse md:space-y-0 ">
                {
                    list && Object.keys(list).map(key => (
                        <div class="w-1/2 md:w-1/3">
                            <p class="mb-4 text-xs font-semibold tracking-widest text-primary-focus uppercase title-font">{key}</p>
                            <ul class="mb-10 list-none">
                                {
                                    list[key] && list[key].map(item => (
                                        <li>
                                            <span class="mb-4 text-xs font-semibold tracking-widest uppercase">{item}</span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
        </div>
    </div>
</section>
