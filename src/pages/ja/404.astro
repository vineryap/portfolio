---
import BaseLayout from '../../layouts/BaseLayout.astro';
const title = '404 - Not Found';

const MainHeadProps = {
    lang: "ja",
    title,
    description: "ページが見つかりません。"
};
---

<BaseLayout MainHeadProps={ MainHeadProps }>
  <div id="not-found" class="flex flex-col w-full h-screen bg-primary items-center justify-center">
    <h1 class="text-7xl text-primary-content font-semibold capitalize drop-shadow-lg">ページが見つかりません。</h1>
    <a href="/ja/" class="btn btn-neutral mt-20">ホームへ戻る</a>
  </div>
</BaseLayout>