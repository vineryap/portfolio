---
import BaseLayout from './BaseLayout.astro'
import FCCProjectsLinks from '../components/NavbarFCC.astro'

interface Script {
  src: string;
  type?: string;
  defer?: boolean;
}

export interface Props {
  MainHeadProps: {
    title: string;
    description: string;
    image?: string;
    type?: string;
    next?: string;
    prev?: string;
    canonicalURL?: string;
    customCSS?: string | Array<string>;
    externalCSS?: string | Array<string>;
    customScript?: Script | Array<Script>;
    externalScript?: Script | Array<Script>;
    };
  lang?: string;
  theme?: string;
}

const { MainHeadProps,
    lang,
    theme } = Astro.props as Props;
---

<BaseLayout lang={lang} theme={theme} { MainHeadProps }>
    <FCCProjectsLinks slot="navbar-links"/>
    <slot />
</BaseLayout>