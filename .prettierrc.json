{
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "overrides": [
    {
      "files": ["*.vue"],
      "options": {
        "semi": false,
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 80,
        "trailingComma": "none",
        "arrowParens": "avoid"
      }
    },
    {
      "files": ["*.svelte"],
      "options": {
        "useTabs": true,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 100,
        "svelteBracketNewLine": true
      }
    },
    {
      "files": ["*.jsx", "*.tsx"],
      "options": {
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "arrowParens": "avoid",
        "printWidth": 100
      }
    }
  ]
}
